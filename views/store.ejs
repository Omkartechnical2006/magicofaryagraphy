<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Store - MAGIC OF ARYA</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap"
        rel="stylesheet">
</head>

<body>
    <!-- Header -->
    <header class="header">
        <div class="container">
            <div class="header-content">
                <div class="logo">
                    <h1>MAGIC OF ARYA</h1>
                    <p class="tagline">The Sorcerer</p>
                </div>
                <nav class="nav">
                    <a href="/">Home</a>
                    <a href="/store" class="active">Courses</a>
                    <a href="#contact">Contact</a>
                    <a href="tel:+918830258349">Call Now</a>
                    <% if (user) { %>
                        <span class="user-name">Welcome, <%= user.name %>!</span>
                        <button class="btn-logout" onclick="logout()">Logout</button>
                        <% } else { %>
                            <button class="btn-login" onclick="openLoginModal()">Login</button>
                            <% } %>
                </nav>
            </div>
        </div>
    </header>

    <!-- Store Section -->
    <section class="store-section">
        <div class="container">
            <div class="store-header">
                <h1>All Courses</h1>
                <p>Explore our complete collection of magic, mentalism, and hypnosis courses</p>
            </div>

            <div class="courses-grid">
                <% courses.forEach(course=> { %>
                    <div class="course-card">
                        <div class="course-image">
                            <img src="<%= course.image %>" alt="<%= course.title %>">
                            <div class="course-badge">‚Çπ<%= course.price.toLocaleString() %>
                            </div>
                        </div>
                        <div class="course-content">
                            <div class="course-category">
                                <%= course.category %>
                            </div>
                            <h3>
                                <%= course.title %>
                            </h3>
                            <p>
                                <%= course.description %>
                            </p>
                            <ul class="course-features">
                                <% course.features.forEach(feature=> { %>
                                    <li>‚úì <%= feature %>
                                    </li>
                                    <% }); %>
                            </ul>
                            <div class="course-footer">
                                <div class="course-price">
                                    <% if (course.originalPrice) { %>
                                        <span class="original-price">‚Çπ<%= course.originalPrice.toLocaleString() %>
                                                </span>
                                        <% } %>
                                            <span class="current-price">‚Çπ<%= course.price.toLocaleString() %></span>
                                </div>
                                <% if (user) { %>
                                    <button class="btn-primary btn-watch">Watch Now</button>
                                    <% } else { %>
                                        <button class="btn-primary" onclick="openLoginModal()">Buy Now</button>
                                        <% } %>
                            </div>
                        </div>
                    </div>
                    <% }); %>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h3>MAGIC OF ARYA</h3>
                    <p>The Sorcerer</p>
                </div>
                <div class="footer-section">
                    <h4>Quick Links</h4>
                    <a href="/">Home</a>
                    <a href="/store">Courses</a>
                    <a href="/admin">Admin</a>
                </div>
                <div class="footer-section">
                    <h4>Legal</h4>
                    <a href="#">Privacy Policy</a>
                    <a href="#">Terms of Service</a>
                    <a href="#">Refund Policy</a>
                </div>
                <div class="footer-section">
                    <h4>Contact</h4>
                    <p>Call: +91 8830258349</p>
                    <p>Email: contact@magicofarya.com</p>
                </div>
            </div>
            <div class="footer-bottom">
                <p>¬© 2025 Arya Chandel - The Mentalist. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <!-- Login Modal -->
    <div id="loginModal" class="modal">
        <div class="modal-content">
            <button class="modal-close" onclick="closeLoginModal()">√ó</button>
            <h2>Create an Account</h2>
            <form id="loginForm" onsubmit="handleLogin(event)">
                <div class="form-group">
                    <input type="text" name="name" placeholder="Name" required>
                </div>
                <div class="form-group">
                    <input type="email" name="email" placeholder="Email address" required>
                </div>
                <div class="form-group password-group">
                    <input type="password" name="password" id="password" placeholder="Password" required>
                    <button type="button" class="toggle-password" onclick="togglePassword()">üëÅ</button>
                </div>
                <button type="submit" class="btn-submit">Next</button>
                <div class="divider">
                    <span>Or</span>
                </div>
                <button type="button" class="btn-google">
                    <span class="google-icon">G</span>
                    Continue with Google
                </button>
                <p class="login-footer">
                    Already have an account? <a href="#" onclick="event.preventDefault()">Log in</a>
                </p>
                <p class="terms">
                    By continuing, you agree to our <a href="#">Terms of Service</a> and <a href="#">Privacy Policy</a>
                </p>
            </form>
            <div id="loginMessage" class="login-message"></div>
        </div>
    </div>

    <script src="/js/main.js"></script>
</body>

</html>