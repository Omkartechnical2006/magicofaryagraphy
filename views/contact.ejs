<%- include('partials/header') %>

    <div class="container" style="padding: 120px 0; text-align: center;">
        <div class="checkout-card" style="margin: 0 auto; max-width: 500px;">
            <h1>Contact Support</h1>
            <p style="color: var(--text-secondary); margin-bottom: 2rem;">
                You can contact us here for any queries or assistance.
            </p>

            <% if (typeof settings !=='undefined' && settings && settings.supportTelegramId) { %>
                <div class="telegram-contact" style="margin-bottom: 2rem;">
                    <a href="https://t.me/<%= settings.supportTelegramId %>" target="_blank" class="btn-primary"
                        style="display: inline-flex; align-items: center; gap: 10px; padding: 1rem 2rem; font-size: 1.2rem;">
                        <svg viewBox="0 0 24 24" width="24" height="24" fill="currentColor">
                            <path
                                d="M11.944 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0a12 12 0 0 0-.056 0zm4.962 7.224c.1-.002.321.023.465.14a.506.506 0 0 1 .171.325c.016.093.036.306.02.472-.18 1.898-.962 6.502-1.36 8.627-.168.9-.499 1.201-.82 1.23-.696.065-1.225-.46-1.9-.902-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.14-5.061 3.345-.48.33-.913.49-1.302.48-.428-.008-1.252-.241-1.865-.44-.752-.245-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.83-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635z" />
                        </svg>
                        Chat on Telegram
                    </a>
                    <p style="margin-top: 1rem; font-size: 0.9rem; color: var(--text-secondary);">
                        ID: @<%= settings.supportTelegramId %>
                    </p>
                </div>
                <% } else { %>
                    <div class="status-message error" style="display: block; margin-bottom: 2rem;">
                        Support ID not configured. Please contact admin.
                    </div>
                    <% } %>

                        <div style="margin-top: 3rem; padding-top: 2rem; border-top: 1px solid var(--border);">
                            <h3 style="color: #ef4444; margin-bottom: 0.5rem;">⚠️ No Refund Policy</h3>
                            <p style="color: var(--text-secondary); font-size: 0.9rem;">
                                Please note that we have a strict <strong>NO REFUND POLICY</strong>. Once a course is
                                purchased, it cannot be refunded or cancelled. Please verify your purchase before
                                proceeding.
                            </p>
                        </div>
        </div>
    </div>

    <%- include('partials/footer') %>