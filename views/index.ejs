<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>MAGIC OF ARYA - The Sorcerer</title>
  <link rel="stylesheet" href="/css/styles.css">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
</head>
<body>
  <!-- Header -->
  <header class="header">
    <div class="container">
      <div class="header-content">
        <div class="logo">
          <h1>MAGIC OF ARYA</h1>
          <p class="tagline">The Sorcerer</p>
        </div>
        <nav class="nav">
          <a href="/">Home</a>
          <a href="/store">Courses</a>
          <a href="#contact">Contact</a>
          <a href="tel:+918830258349">Call Now</a>
          <% if (user) { %>
            <span class="user-name">Welcome, <%= user.name %>!</span>
            <button class="btn-logout" onclick="logout()">Logout</button>
          <% } else { %>
            <button class="btn-login" onclick="openLoginModal()">Login</button>
          <% } %>
        </nav>
      </div>
    </div>
  </header>

  <!-- Hero Section -->
  <section class="hero">
    <div class="container">
      <h1 class="hero-title">Welcome to the World of Magic & Mentalism</h1>
      <p class="hero-subtitle">Master the Art of Mind-Reading, Hypnosis, and Magic</p>
      <a href="/store" class="btn-primary">Explore Courses</a>
    </div>
  </section>

  <!-- Master the Art of Mentalism Section -->
  <section class="courses-section">
    <div class="container">
      <h2 class="section-title">Master the Art of Mentalism</h2>
      <div class="courses-grid">
        <% courses.filter(c => c.category === 'mentalism' || c.category === 'hypnosis' || c.category === 'magic').forEach(course => { %>
          <div class="course-card">
            <div class="course-image">
              <img src="<%= course.image %>" alt="<%= course.title %>">
              <div class="course-badge">‚Çπ<%= course.price.toLocaleString() %></div>
            </div>
            <div class="course-content">
              <h3><%= course.title %></h3>
              <p><%= course.description %></p>
              <ul class="course-features">
                <% course.features.forEach(feature => { %>
                  <li>‚úì <%= feature %></li>
                <% }); %>
              </ul>
              <% if (user) { %>
                <button class="btn-primary">Watch Now</button>
              <% } else { %>
                <button class="btn-primary" onclick="openLoginModal()">Buy Now</button>
              <% } %>
            </div>
          </div>
        <% }); %>
      </div>
    </div>
  </section>

  <!-- Live Classes & Workshops -->
  <section class="special-courses">
    <div class="container">
      <h2 class="section-title">Live Training Programs</h2>
      <div class="courses-grid">
        <% courses.filter(c => c.category === 'live' || c.category === 'workshop').forEach(course => { %>
          <div class="course-card featured">
            <div class="course-image">
              <img src="<%= course.image %>" alt="<%= course.title %>">
              <div class="course-badge">‚Çπ<%= course.price.toLocaleString() %></div>
            </div>
            <div class="course-content">
              <h3><%= course.title %></h3>
              <p><%= course.description %></p>
              <ul class="course-features">
                <% course.features.forEach(feature => { %>
                  <li>‚úì <%= feature %></li>
                <% }); %>
              </ul>
              <% if (user) { %>
                <button class="btn-primary">Enroll Now</button>
              <% } else { %>
                <button class="btn-primary" onclick="openLoginModal()">Enroll Now</button>
              <% } %>
            </div>
          </div>
        <% }); %>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="about-section">
    <div class="container">
      <h2 class="section-title">About Arya Chandel</h2>
      <div class="about-content">
        <div class="about-text">
          <h3>Magician, Illusionist, Mentalist, India's only Street Hypnosis Artist!</h3>
          <p>Dr. Arya is a truly remarkable figure, seamlessly blending the enchanting worlds of magic and healthcare. His journey began when he made a daring leap from his successful career as an orthodontist to follow his passion for magic‚Äîa decision that has certainly paid off.</p>
          <p>One of India's most sought-after mentalists, Dr. Arya performs astounding feats that leave audiences spellbound, showcasing skills like mind-reading and hypnosis. His impressive credentials include being a two-time National Award winner and holding a Guinness World Record.</p>
        </div>
        <div class="about-stats">
          <div class="stat">
            <h4>15+</h4>
            <p>Years Experience</p>
          </div>
          <div class="stat">
            <h4>10,000+</h4>
            <p>Students Trained</p>
          </div>
          <div class="stat">
            <h4>5,000+</h4>
            <p>Shows Performed</p>
          </div>
          <div class="stat">
            <h4>20+</h4>
            <p>Media Features</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="footer">
    <div class="container">
      <div class="footer-content">
        <div class="footer-section">
          <h3>MAGIC OF ARYA</h3>
          <p>The Sorcerer</p>
        </div>
        <div class="footer-section">
          <h4>Quick Links</h4>
          <a href="/">Home</a>
          <a href="/store">Courses</a>
          <a href="/admin">Admin</a>
        </div>
        <div class="footer-section">
          <h4>Legal</h4>
          <a href="#">Privacy Policy</a>
          <a href="#">Terms of Service</a>
          <a href="#">Refund Policy</a>
        </div>
        <div class="footer-section">
          <h4>Contact</h4>
          <p>Call: +91 8830258349</p>
          <p>Email: contact@magicofarya.com</p>
        </div>
      </div>
      <div class="footer-bottom">
        <p>¬© 2025 Arya Chandel - The Mentalist. All rights reserved.</p>
      </div>
    </div>
  </footer>

  <!-- Login Modal -->
  <div id="loginModal" class="modal">
    <div class="modal-content">
      <button class="modal-close" onclick="closeLoginModal()">√ó</button>
      <h2>Create an Account</h2>
      <form id="loginForm" onsubmit="handleLogin(event)">
        <div class="form-group">
          <input type="text" name="name" placeholder="Name" required>
        </div>
        <div class="form-group">
          <input type="email" name="email" placeholder="Email address" required>
        </div>
        <div class="form-group password-group">
          <input type="password" name="password" id="password" placeholder="Password" required>
          <button type="button" class="toggle-password" onclick="togglePassword()">üëÅ</button>
        </div>
        <button type="submit" class="btn-submit">Next</button>
        <div class="divider">
          <span>Or</span>
        </div>
        <button type="button" class="btn-google">
          <span class="google-icon">G</span>
          Continue with Google
        </button>
        <p class="login-footer">
          Already have an account? <a href="#" onclick="event.preventDefault()">Log in</a>
        </p>
        <p class="terms">
          By continuing, you agree to our <a href="#">Terms of Service</a> and <a href="#">Privacy Policy</a>
        </p>
      </form>
      <div id="loginMessage" class="login-message"></div>
    </div>
  </div>

  <script src="/js/main.js"></script>
</body>
</html>
